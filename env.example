# Application Configuration
NODE_ENV=development
PORT=8000
API_PREFIX=api

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/insightflow_db"

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Swagger Configuration (Development only)
SWAGGER_TITLE=InsightFlow API
SWAGGER_DESCRIPTION=API documentation for InsightFlow application
SWAGGER_VERSION=1.0.0
SWAGGER_PATH=docs

# AWS Configuration (Production)
AWS_REGION=ap-southeast-2
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# ECR Configuration
ECR_BASE=780864592876.dkr.ecr.ap-southeast-2.amazonaws.com
ECR_REPOSITORY=insightflow

# Docker Hub Configuration
DOCKERHUB_USERNAME=your_dockerhub_username
DOCKERHUB_PASSWORD=your_dockerhub_password

# Redis Configuration (if using)
REDIS_URL=redis://localhost:6379

# JWT Configuration (if using)
JWT_SECRET=your_jwt_secret
JWT_EXPIRES_IN=24h

# Email Configuration (if using)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
